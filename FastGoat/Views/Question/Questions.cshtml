@{
    ViewData["Title"] = "About";
}
@model Questionnaire
<h1>Some Questions</h1>
@using (Html.BeginForm())
{
<fieldset>

    @for (int i = 0; i < Model.QuestionGroups.Count; i++)
    {
        <h1>@Model.QuestionGroups[i].GroupTitle</h1>
        @for (int j =0; j < Model.QuestionGroups[i].Questions.Count; j++)
        {
            <p>@Model.QuestionGroups[i].Questions[j].QuestionText</p>
            @Html.TextBoxFor(model => model.QuestionGroups[i].Questions[j].QuestionAnswer)

            //BUG
        }
    }
    <input type="submit" value="Save" />
</fieldset>

}